<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPost.write_post.WriteNewPostView">
    <LinearLayout
        android:id="@+id/linera1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/main_motive"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_post_go_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/new_post_next"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_navigate_next_24"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/new_post_more"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity=""
            android:src="@drawable/ic_baseline_more_vert_24"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linera1"
        android:background="#ffffff">

        <EditText
            android:id="@+id/new_post_edit_text"
            android:layout_width="match_parent"
            android:minHeight="50dp"
            android:layout_height="wrap_content"
            android:textColorHighlight="@color/colorPrimaryPurple"
            android:layout_gravity="start"
            android:layout_marginTop="22dp"
            android:padding="8dp"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="textMultiLine"
            android:hint="@string/type_new_post" />

    </ScrollView>



</RelativeLayout>