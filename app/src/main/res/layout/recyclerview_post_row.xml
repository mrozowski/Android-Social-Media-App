<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:rowCount="3"
    android:columnCount="4"
    android:padding="12dp"
    android:background="@drawable/post_element"
    >

    <TextView
        android:id="@+id/post_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="4"
        android:text="@string/post_title"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"

        android:text="@string/comments" />

    <TextView
        android:id="@+id/post_row_comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"

        android:layout_row="2"
        android:layout_column="2"
        android:text="@string/likes" />

    <TextView
        android:id="@+id/post_row_likes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_row="2"
        android:layout_column="3" />

    <TextView
        android:id="@+id/post_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/date"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/post_row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/post_author_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/author"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/post_row_author"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_row="1"
        android:layout_column="1"
        tools:ignore="RtlCompat" />





</GridLayout>